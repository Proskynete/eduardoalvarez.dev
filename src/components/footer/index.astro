---
import config from "../../settings";
const currentYear = new Date().getFullYear();
---

<div class="mt-16 flex flex-col items-center w-ful">
  <div class="mb-3 flex gap-4 md:gap-10">
    {
      config.contacts
        .filter((social) => social.show)
        .map((social) => (
          <a
            class="text-lg text-gray-400 hover:text-gray-200 transition ease-in-out duration-150"
            target="_blank"
            rel="noopener noreferrer"
            href={social.href}
          >
            <span>{social.name}</span>
          </a>
        ))
    }
  </div>

  <div class="mt-5 flex flex-col items-center">
    <div class="mb-2 flex space-x-2 text-sm text-gray-400">
      <pre
        class="text-xs text-gray-100">&gt; $ cd ~/eduardoalvarez.dev/{currentYear}<span class="w-1 h-3 inline-block bg-gray-400 ml-2 rounded-sm motion-safe:animate-ping motion-safe:duration-75" /></pre>
    </div>
    <div class="mb-8 text-sm text-gray-400">
      <a href="https://eduardoalvarez.dev">eduardoalvarez.dev</a>
    </div>
  </div>
</div>
