---
import config from "../../settings";
const currentYear = new Date().getFullYear();
---

<div class="mt-16 flex flex-col items-center">
  <div class="mb-3 flex gap-10">
    {
      config.contacts
        .filter((social) => social.show)
        .map((social) => (
          <a
            class="text-lg text-gray-500 transition hover:text-gray-600"
            target="_blank"
            rel="noopener noreferrer"
            href={social.href}
          >
            <span>{social.name}</span>
          </a>
        ))
    }
  </div>

  <div class="mt-5 flex flex-col items-center">
    <div class="mb-2 flex space-x-2 text-sm text-gray-500 dark:text-gray-400">
      <pre
        class="text-xs text-gray-800 dark:text-gray-100">&gt; $ cd ~/eduardoalvarez.dev/{currentYear}<span class="w-1 h-4 inline-block bg-primary-800 dark:bg-gray-400 ml-2 rounded-sm motion-safe:animate-ping motion-safe:duration-75"> </span></pre>
    </div>
  </div>
</div>
