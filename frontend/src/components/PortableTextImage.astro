---
import { urlForImage } from '../sanity/urlForImage';

const node = Astro?.props?.node;

const url = node ? urlForImage(node?.asset).url() : "";
const webpUrl = node ? urlForImage(node?.asset).format('webp').url() : "";
const alt = node ? node?.alt : "";
---

<picture>
  <source
    srcset={webpUrl}
    type="image/webp"
  />
  <img
    src={url}
    alt={alt}
  />
</picture>