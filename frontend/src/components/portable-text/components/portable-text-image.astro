---
import { getSanityImageURL } from "../../../utils/sanity";

interface Props {
  node: {
    asset: string;
    alt: string;
  };
}

const { asset, alt } = Astro.props.node;

const url = getSanityImageURL(asset).url();
const webpUrl = getSanityImageURL(asset).format("webp").url();
---

<picture>
  <source srcset={webpUrl} type="image/webp" />
  <img class="responsive__img" src={url} alt={alt} />
</picture>
